<Window x:Class="practica1ef.AllWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica1ef"
        mc:Ignorable="d"
        Title="AllWindow" Height="450" Width="800">
    <DataGrid x:Name="AllTable" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding ProductsName}" Header="Название продукта"/>
            <DataGridTextColumn Binding="{Binding CategoriesName}" Header="Название категории"/>
            <DataGridTextColumn Binding="{Binding Cost}" Header="Цена продукта"/>
            <DataGridTextColumn Binding="{Binding Amount}" Header="Количество продукта"/>
        </DataGrid.Columns>
    </DataGrid>

</Window>
